<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>

	<ui:style>
		.danger {
			background-color: #fcf2f2;
			border-color: #dFb5b4;
		}
		
		.margin-fix {
			margin-bottom: 0 !important;
		}
		
		.margin-logo {
			margin-left: 20px;
			margin-top: 5px;
			margin-bottom: 5px;
		}
		
		.margin-user {
			margin-right: 20px;
			margin-left: 20px;
		}
		
		.margin-webapps {
			margin-right: 20px;
			margin-left: 10px;
		}
		
		.margin-top-bottom {
			margin-top: 40px;
			margin-bottom: 10px;
		}
		
		.margin-top-bottom-search-field {
			margin-top: 10px;
			margin-bottom: 10px;
		}
		
		.margin-title {
			padding-top: 20px;
		}
	</ui:style>
	
	<ui:with field='i18n' type='com.lofidewanto.demo.client.Messages' />
	<ui:with field='asset' type='com.lofidewanto.demo.client.common.Asset' />

	<g:ScrollPanel>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="MD_12">
					<b:Container fluid="true" addStyleNames="{style.margin-top-bottom}">
						<b:Row>
							<!-- Your content -->
							<b:Column size="MD_12" ui:field="contentColumn">
							</b:Column>
						</b:Row>
					</b:Container>
				</b:Column>
			</b:Row>
		</b:Container>
	</g:ScrollPanel>
</ui:UiBinder> 